  $.validator.addMethod("includeName", function (value) {
    let names = $("#name").val().split(" ")
    if (value && names.some((n, index) => {

      if (value.includes(n))
        if (index == 0 || index == names.length - 1) return true // first or last
      return false // middlename
    }))
      return false;
